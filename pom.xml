	<profiles>
		<profile>
			<id>test</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<skip>false</skip>
							<excludes>
								<exclude>terrastore/integration/*.java</exclude>
								<exclude>terrastore/metrics/*.java</exclude>
							</excludes>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>integration-test</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<skip>true</skip>
						</configuration>
						<executions>
							<execution>
								<phase>integration-test</phase>
								<goals>
									<goal>test</goal>
								</goals>
								<configuration>
									<skip>false</skip>
									<includes>
										<include>terrastore/integration/*.java</include>
									</includes>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.terracotta.maven.plugins</groupId>
						<artifactId>tc-maven-plugin</artifactId>
						<dependencies>
							<dependency>
								<groupId>org.terracotta</groupId>
								<artifactId>terracotta</artifactId>
								<version>3.5.2</version>
							</dependency>
						</dependencies>
						<configuration>
							<config>${basedir}/src/dist/master/terracotta-config-test.xml</config>
							<startServer>false</startServer>
							<activeNodes>node-1,node-2</activeNodes>
							<processes>
								<process nodeName="node-1" count="1" className="terrastore.startup.Startup" arguments="--master localhost:9510 --nodeTimeout 60000 --httpPort 8080 --nodePort 8180" jvmargs="-DTERRASTORE_HOME=${basedir}/src/dist/server"/>
								<process nodeName="node-2" count="1" className="terrastore.startup.Startup" arguments="--master localhost:9510 --nodeTimeout 60000 --httpPort 8081 --nodePort 8181" jvmargs="-DTERRASTORE_HOME=${basedir}/src/dist/server"/>
							</processes>
						</configuration>
						<executions>
							<execution>
								<id>start</id>
								<phase>pre-integration-test</phase>
								<goals>
									<goal>start</goal>
									<goal>run-integration</goal>
								</goals>
							</execution>
							<execution>
								<id>stop</id>
								<phase>post-integration-test</phase>
								<goals>
									<goal>terminate-integration</goal>
									<goal>stop</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<phase>initialize</phase>
								<configuration>
									<tasks>
										<delete dir="${basedir}/tc-data"/>
										<delete dir="${basedir}/src/dist/master/tc-data"/>
										<delete dir="${basedir}/src/dist/server/tc-data"/>
										<delete>
											<fileset dir="${basedir}/src/dist/server/backups">
												<include name="*.bak"/>
											</fileset>
										</delete>
									</tasks>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>metrics-test</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<skip>true</skip>
						</configuration>
						<executions>
							<execution>
								<phase>integration-test</phase>
								<goals>
									<goal>test</goal>
								</goals>
								<configuration>
									<skip>false</skip>
									<includes>
										<include>terrastore/metrics/*.java</include>
									</includes>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.terracotta.maven.plugins</groupId>
						<artifactId>tc-maven-plugin</artifactId>
						<dependencies>
							<dependency>
								<groupId>org.terracotta</groupId>
								<artifactId>terracotta</artifactId>
								<version>3.5.2</version>
							</dependency>
						</dependencies>
						<configuration>
							<config>${basedir}/src/dist/master/terracotta-config-test.xml</config>
							<startServer>false</startServer>
							<jvmargs>-Xms1024m -Xmx1024m</jvmargs>
							<activeNodes>node-1,node-2</activeNodes>
							<processes>
								<process nodeName="node-1" count="1" className="terrastore.startup.Startup" arguments="--master localhost:9510 --nodeTimeout 60000 --httpPort 8080 --nodePort 8180" jvmargs="-DTERRASTORE_HOME=${basedir}/src/dist/server -Xms1024m -Xmx1024m"/>
								<process nodeName="node-2" count="1" className="terrastore.startup.Startup" arguments="--master localhost:9510 --nodeTimeout 60000 --httpPort 8081 --nodePort 8181" jvmargs="-DTERRASTORE_HOME=${basedir}/src/dist/server -Xms1024m -Xmx1024m"/>
							</processes>
						</configuration>
						<executions>
							<execution>
								<id>start</id>
								<phase>pre-integration-test</phase>
								<goals>
									<goal>start</goal>
									<goal>run-integration</goal>
								</goals>
							</execution>
							<execution>
								<id>stop</id>
								<phase>post-integration-test</phase>
								<goals>
									<goal>terminate-integration</goal>
									<goal>stop</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<phase>initialize</phase>
								<configuration>
									<tasks>
										<delete dir="${basedir}/tc-data"/>
										<delete dir="${basedir}/src/test/resources/config/tc-data"/>
									</tasks>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<configuration>
					<goals>assembly:assembly</goals>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.0</version>
				<configuration>
					<encoding>UTF-8</encoding>
					<source>1.7</source>
					<target>1.7</target>
					<compilerVersion>1.7</compilerVersion>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration>
							<classifier>api</classifier>
							<includes>
								<include>terrastore/annotation/*</include>
								<include>terrastore/common/ErrorMessage*</include>
								<include>terrastore/event/Action*</include>
								<include>terrastore/event/Event*</include>
								<include>terrastore/partition/Custom*</include>
								<include>terrastore/store/operators/*</include>
								<include>terrastore/util/concurrent/ConcurrentUtils*</include>
							</includes>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<configuration>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor>src/assembly/dist.xml</descriptor>
					</descriptors>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.google.code.maven-license-plugin</groupId>
				<artifactId>maven-license-plugin</artifactId>
				<version>1.4.0</version>
				<configuration>
					<header>header.txt</header>
					<aggregate>true</aggregate>
					<properties>
						<year>2009 - 2011</year>
						<owner>Sergio Bossa (sergio.bossa@gmail.com)</owner>
						<maintainer>Adriano Santos (sleipnir@bsd.com.br)</maintainer>
					</properties>
					<encoding>UTF-8</encoding>
					<includes>
						<include>**/*.java</include>
					</includes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.terracotta.maven.plugins</groupId>
				<artifactId>tc-maven-plugin</artifactId>
				<version>1.9.4</version>
				<dependencies>
					<dependency>
						<groupId>org.terracotta</groupId>
						<artifactId>terracotta</artifactId>
						<version>3.5.2</version>
					</dependency>
				</dependencies>
				<configuration>
					<config>${basedir}/src/dist/master/terracotta-config-test.xml</config>
					<startServer>false</startServer>
					<activeNodes>node-1,node-2</activeNodes>
					<processes>
						<process nodeName="node-1" className="terrastore.startup.Startup" arguments="--master localhost:9510 --httpThreads 100 --httpHost 0.0.0.0 --nodeHost 127.0.0.1 --httpPort 8080 --nodePort 8180 --compressCommunication true --compressDocs true" jvmargs="-DTERRASTORE_HOME=${basedir}/src/dist/server -Xdebug -Xnoagent -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=9000"/>
						<process nodeName="node-2" className="terrastore.startup.Startup" arguments="--master localhost:9510 --httpThreads 100 --httpHost 0.0.0.0 --nodeHost 127.0.0.1 --httpPort 8081 --nodePort 8181 --compressCommunication true --compressDocs true" jvmargs="-DTERRASTORE_HOME=${basedir}/src/dist/server -Xdebug -Xnoagent -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=9001"/>
					</processes>
				</configuration>
			</plugin>
		</plugins>
	</build>
